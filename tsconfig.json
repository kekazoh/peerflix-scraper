{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "lib": ["es2018"],
    "target": "es2018", // See https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "*": ["./types/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
